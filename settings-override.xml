<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <profiles>
        <mirror>
            <id>codelogic</id>
            <mirrorOf>codelogic</mirrorOf>
            <url>${CL_HOST}/codelogic/server</url>
        </mirror>

        <mirror>
            <id>central</id>
            <mirrorOf>central</mirrorOf>
            <url>http://repo.maven.apache.org/maven2/</url>
        </mirror>
        <profile>
            <id>codelogic</id>
            <properties>
                <codelogic.url>${CL_HOST}/codelogic/server</codelogic.url>
                <codelogic.oauth.username>${CL_AGENT_USER}</codelogic.oauth.username>
                <codelogic.oauth.password>${CL_AGENT_PASS}</codelogic.oauth.password>
                <codelogic.batchSize>2000</codelogic.batchSize>
                <codelogic.methodInvokesScanningEnabled>true</codelogic.methodInvokesScanningEnabled>
                <codelogic.methodInvokesScanningPackageIncludeList>${PACKAGE_NAME}</codelogic.methodInvokesScanningPackageIncludeList>
                <codelogic.applicationGroups>${CI_PROJECT_NAME}-${CI_COMMIT_BRANCH}</codelogic.applicationGroups>
                <codelogic.expungeScanSessions>true</codelogic.expungeScanSessions>
                <codelogic.rescan>true</codelogic.rescan>
            </properties>
            <repositories>
                <repository>
                    <id>codelogic</id>
                    <name>codelogic</name>
                    <url>${CL_HOST}/codelogic/server/packages/maven/libs-release</url>
                </repository>
                <repository>
                    <id>central</id>
                    <name>libs-release</name>
                    <url>https://repo.maven.apache.org/maven2/</url>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>codelogic</id>
                    <name>codelogic</name>
                    <url>${CL_HOST}/codelogic/server/packages/maven/libs-release</url>
                </pluginRepository>
                <pluginRepository>
                        <id>repository.spring.release</id>
                        <name>Spring GA Repository</name>
                        <url>https://repo.spring.io/plugins-release/</url>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
    <activeProfiles>
        <activeProfile>codelogic</activeProfile>
    </activeProfiles>
</settings>
